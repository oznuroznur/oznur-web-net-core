<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - meinportfolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/output.css" />
</head>

<body>
    <header class="border-b-4 border-green-400 p-4 md:p-6 bg-[url('/assets/banner-bg.png')] bg-center  ">
        <div class="max-w-6xl mx-auto ">
            <div class="border-2 border-white p-3 md:p-4 mb-4 bg-gray-900">
                <h1 class="text-2xl md:text-4xl font-bold mb-2"> <a class="navbar-brand" asp-area=""
                        asp-page="/Index">OZNUR OZNUR</a></h1>
                <p class="text-base md:text-xl text-green-400">
                    SOFTWARE DEVELOPER
                </p>
            </div>
            <nav class="flex flex-col sm:flex-row gap-3 md:gap-6 ">
                <a href="#about"
                    class="border-2 border-white px-3 py-2 md:px-4 md:py-2  hover:bg-white hover:text-black hover:bg-none transition-none text-center text-sm md:text-base bg-[url('/assets/banner-bg.png')] bg-cover bg-center">
                    [ABOUT]
                </a>
                <a href="#projects"
                    class="border-2 border-white px-3 py-2 md:px-4 md:py-2 hover:bg-white hover:text-black hover:bg-none transition-none text-center text-sm md:text-base bg-[url('/assets/banner-bg.png')] bg-cover bg-center">
                    [PROJECTS]
                </a>
                <a href="#resume"
                    class="border-2 border-white px-3 py-2 md:px-4 md:py-2 hover:bg-white hover:text-black hover:bg-none transition-none text-center text-sm md:text-base bg-[url('/assets/banner-bg.png')] bg-cover bg-center">
                    [RESUME]
                </a>
                <a href="#contact"
                    class="border-2 border-white px-3 py-2 md:px-4 md:py-2 hover:bg-white hover:text-black hover:bg-none transition-none text-center text-sm md:text-base bg-[url('/assets/banner-bg.png')] bg-cover bg-center">
                    [CONTACT]
                </a>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t-4 border-green-400 p-6 text-center bg-[url('/assets/banner-bg.png')]">
        <p class="text-green-400">© 2025 OZNUR OZNUR</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
